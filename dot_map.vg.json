{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "dot map sa4",
    "projection": {
        "type": "equirectangular"
    },
    "layer": [
        {
            "data": {
                "url": "au-states.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_admin_1_states_provinces"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "sa4_enrolment.csv",
                "format": {
                    "type": "csv"
                }
            },
            "params": [
                {
                    "name": "grid",
                    "select": "interval",
                    "bind": "scales"
                }
            ],
            "transform": [
                {
                    "lookup": "SA4_NAME_2021",
                    "from": {
                        "data": {
                            "url": "sa4_2016.csv"
                        },
                        "key": "SA4_NAME",
                        "fields": ["latitude", "longitude"]
                    }
                },
                {
                    "filter": "datum.Year==2021"
                }
            ],
            "mark": {
                "type": "circle",
                "opacity": 1
            },
            "encoding": {
                "longitude": {
                    "field": "longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Commencement",
                    "type": "quantitative"
                },
                "tooltip": [
                    {
                        "field": "SA4_NAME_2021",
                        "type": "nominal"
                    },
                    {
                        "field": "Year",
                        "type": "ordinal"
                    }
                ]
            }
        }
    ]
}