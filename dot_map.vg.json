{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "dot map sa4",
    "params": [
        {
            "name": "zoom_level",
            "value": 10000,
            "bind": {
                "input": "range",
                "min": 3500,
                "max": 30000,
                "step": 100,
                "name": "Zoom: "
            }
        },
        {
            "name": "center_to",
            "value": [145,-37.95],
            "bind": {
                "input": "select",
                "options": [
                    [145, -37.95],
                    [151, -33.5],
                    [153, -27.55]
                ],
                "labels": [
                    "Melbourne CBD",
                    "Sydney CBD",
                    "Brisbane CBD"
                ],
                "name": "Centre to: "
            }
        }
    ],
    "projection": {
        "type": "equirectangular",
        "center": {"expr": "center_to"},
        "scale": {"expr": "zoom_level"}
    },
    "layer": [
        {
            "data": {
                "url": "au-states.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_admin_1_states_provinces"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "sa4_enrolment.csv",
                "format": {
                    "type": "csv"
                }
            },
            "params": [
                {
                    "bind": "scales"
                }
            ],
            "transform": [
                {
                    "lookup": "SA4_NAME_2021",
                    "from": {
                        "data": {
                            "url": "sa4_2016.csv"
                        },
                        "key": "SA4_NAME",
                        "fields": ["latitude", "longitude"]
                    }
                },
                {
                    "filter": "datum.Year==2021"
                },
                {
                    "filter": "datum.Commencement>301"
                }
            ],
            "mark": {
                "type": "point",
                "opacity": 0.2
            },
            "encoding": {
                "longitude": {
                    "field": "longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Commencement",
                    "type": "quantitative"
                },
                "tooltip": [
                    {
                        "field": "SA4_NAME_2021",
                        "type": "nominal"
                    },
                    {
                        "field": "Year",
                        "type": "ordinal"
                    },
                    {
                        "field": "Commencement",
                        "type": "quantitative"
                    }
                ]
            }
        }
    ]
}