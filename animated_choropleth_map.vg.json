{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "askdjfls",
    "projection": {
        "type": "equirectangular"
    },
    "params": [
        {
            "name": "year_time_slider",
            "value": 2010,
            "bind": {
                "input": "range",
                "min": 2004,
                "max": 2022,
                "step": 1,
                "name": "Year"
            }
        }
    ],
    "layer": [
        {
            "data": {
                "url": "au-states.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_admin_1_states_provinces"
                }
            },
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "overseas_migration_view.csv"
                        },
                        "key": "state",
                        "fields": [
                            "mig_year",
                            "net_overseas_migration",
                            "Australian_total"
                        ]
                    }
                },
                {
                    "calculate": "toNumber(datum.mig_year)",
                    "as": "num_year"
                },                
                {
                    "filter": {
                        "field": "num_year",
                        "equal": {"expr": "year_time_slider"}
                    }
                }
            ],
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "color": {
                    "field": "net_overseas_migration",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            5,
                            10,
                            20,
                            30
                        ],
                        "range": [
                            "#81d484",
                            "#55a657",
                            "#338035",
                            "#195e1a",
                            "#053b05"
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "net_overseas_migration",
                        "type": "quantitative"
                    },
                    {
                        "field": "state",
                        "type": "nominal"
                    },
                    {
                        "field": "mig_year",
                        "type": "ordinal"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "au-states.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "dimgrey"
            }
        }
    ]
}